<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_layout_max_height"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"

    >

    <TextView
        android:id="@+id/tab_discover"
        style="@style/tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/title_tab1"
        android:drawableTop="@drawable/discover_icon"

        />

    <TextView
        android:id="@+id/tab_map"
        style="@style/tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/title_tab2"
        android:drawableTop="@drawable/map"
        />

    <TextView
        android:id="@+id/tab_myposts"
        style="@style/tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/title_tab3"
        android:drawableTop="@drawable/my_post"/>

    <TextView
        android:id="@+id/tab_requests"
        style="@style/tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/title_tab4"
        android:drawableTop="@drawable/request"/>

    <TextView
        android:id="@+id/tab_mynetwotk"
        style="@style/tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/title_tab5"
        android:drawableTop="@drawable/my_network"/>

</LinearLayout>
