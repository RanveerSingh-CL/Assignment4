<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/navi_shadow"
            android:orientation="vertical"
            android:paddingTop="60dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/john"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:drawablePadding="-36dp"
                android:drawableRight="@drawable/edit_icon"
                android:gravity="center"
                android:text="@string/Paris"
                android:textSize="16sp" />

            <TextView
                style="@style/navi_item"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableRight="@drawable/home_icon"
                android:text="@string/item1" />

            <TextView
                style="@style/navi_item"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="32dp"
                android:drawableRight="@drawable/card_icon"
                android:text="@string/item2" />

            <TextView
                style="@style/navi_item"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableRight="@drawable/phone_icon"
                android:text="@string/item3" />

            <TextView
                style="@style/navi_item"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="32dp"
                android:drawableRight="@drawable/profile_icon"
                android:text="@string/item4" />

            <TextView
                style="@style/navi_item"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableRight="@drawable/home_icon"
                android:text="@string/item5" />

            <TextView
                style="@style/navi_item"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableRight="@drawable/profile_icon"
                android:text="@string/item6" />


        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:layout_marginTop="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/length_very_small"
            android:src="@drawable/paris" />
    </FrameLayout>


</FrameLayout>
