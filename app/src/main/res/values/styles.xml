<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tab">
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:paddingBottom">@dimen/length_very_small</item>
        <item name="android:paddingTop">@dimen/length_very_small</item>
        <item name="android:background">@drawable/tab_text_selector</item>
    </style>

    <style name="item_discovered_transparentbar_left">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>


        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="item_discovered_transparentbar_right">
        <item name="android:drawableLeft">@drawable/white_loc</item>
        <item name="android:drawablePadding">@dimen/length_very_small</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="item_discovered__grid_transparentbar_tv">
        <item name="android:drawableStart">@drawable/locatiopn_icon</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="item_discovered_transparentbar_edit">

        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingRight">@dimen/length_very_small</item>
    </style>

    <style name="item_discovered_transparentbar_trash">
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="item_discovered_switch" parent="Theme.AppCompat">
        <item name="android:layout_alignBottom">@+id/iv_cover_image</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginLeft">@dimen/length_medium</item>
        <item name="android:layout_marginBottom">@dimen/length_very_small</item>
        <item name="android:checked">true</item>


    </style>

    <style name="item_discovered_tv">
        <item name="android:drawablePadding">@dimen/length_very_smaller</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_marginRight">@dimen/length_small</item>
        <item name="android:layout_marginTop">@dimen/length_very_small</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center_vertical</item>


    </style>

    <style name="item_text_tv">

        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_marginLeft">@dimen/length_small</item>
        <item name="android:layout_marginTop">@dimen/length_very_small</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginRight">2dp</item>


    </style>

    <style name="item_discovered_profile_image">
        <item name="android:layout_marginTop">@dimen/length_very_smaller</item>
        <item name="android:layout_marginLeft">@dimen/length_very_small</item>
    </style>

    <style name="name_tv">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="item_discovered_tv_over_image" parent="Theme.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/length_small</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignBottom">@+id/iv_cover_image</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginRight">@dimen/length_small</item>
        <item name="android:layout_marginBottom">@dimen/length_small</item>


    </style>
    .

    <style name="search_bar">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:drawablePadding">@dimen/length_very_small</item>
        <item name="android:paddingLeft">@dimen/length_small</item>

    </style>

    <style name="itemn_network_tv1">
        <item name="android:layout_weight">0.5</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_small</item>


    </style>

    <style name="itemn_network_tv2">
        <item name="android:layout_weight">0.5</item>
        <item name="android:drawableLeft">@drawable/icon_location</item>
        <item name="android:drawablePadding">@dimen/length_very_smaller2</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/grey_text</item>


    </style>

    <style name="itemn_network_tv3">

        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:background">@drawable/connect_button</item>
        <item name="android:layout_marginTop">@dimen/length_very_small</item>


    </style>
    <!--item_request-->


    <style name="item_request_card">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/length_small</item>
        <item name="android:layout_marginRight">@dimen/length_small</item>


    </style>


    <style name="item_request_tv_name">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_marginRight">@dimen/length_very_smaller</item>
        <item name="android:layout_marginBottom">@dimen/length_very_small</item>
        <item name="android:gravity">center</item>


    </style>

    <style name="item_request_tv_address">
        <item name="android:drawableLeft">@drawable/location_icon_small</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/length_very_smaller</item>
        <item name="android:textSize">@dimen/length_small</item>
        <item name="android:layout_marginBottom">@dimen/length_very_small</item>

    </style>

    <style name="item_request_tv_map">

        <item name="android:background">@drawable/connect_button</item>

        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:paddingLeft">@dimen/length_very_smaller</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="item_request_tv_time">
        <item name="android:drawable">@drawable/time_icon_small</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/length_very_small</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="item_request_tv_discryption">
        <item name="android:drawable">@drawable/reviewa_icon_small</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="accept_view">
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:color">@android:color/white</item>
        <item name="android:layout_marginLeft">@dimen/xlength_very_large</item>
        <item name="android:layout_marginRight">@dimen/length_very_small</item>

    </style>

    <style name="reject_view">

        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:color">@android:color/holo_blue_light</item>
        <item name="android:layout_marginLeft">@dimen/length_very_small</item>
        <item name="android:layout_marginRight">@dimen/xlength_very_large</item>

    </style>

    <style name="my_networks_tv">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/length_very_small</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <!-- Rounded TextViews--><style name="RoundedTextViewPrimary" parent="@style/my_networks_tv">
    <item name="android:background">@drawable/shape_pill_primary</item>
    <item name="android:padding">@dimen/length_very_small</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:gravity">center</item>
</style>

    <style name="RoundedLeftTextView" parent="@style/RoundedTextViewPrimary">
        <item name="android:background">@drawable/shape_pill_left_rounded</item>
    </style>

    <style name="appbar_title">
        >
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="navi_item">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:paddingLeft">@dimen/length_small</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/length_very_small</item>


    </style>
    <style name="fragment_request_header_tv">
        <item name="android:textSize">@dimen/length_small</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_weight">0.3</item>
    </style>
</resources>
