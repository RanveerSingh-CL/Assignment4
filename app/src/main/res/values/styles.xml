<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tab">
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:background">@drawable/tab_text_selector</item>
    </style>

    <style name="item_discovered_transparentbar_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>


        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="item_discovered_transparentbar_text2">
        <item name="android:drawableLeft">@drawable/white_loc</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="item_discovered__grid_transparentbar_text2">
        <item name="android:drawableStart">@drawable/locatiopn_icon</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="item_discovered_transparentbar_icon1">

        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="item_discovered_transparentbar_icon2">
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="item_discovered_switch" parent="Theme.AppCompat">
        <item name="android:layout_alignBottom">@+id/cover_image</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginLeft">21dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:checked">true</item>


    </style>

    <style name="item_discovered_tv">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>


    </style>

    <style name="item_text_tv">

        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_marginLeft">17dp</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginRight">2dp</item>


    </style>

    <style name="item_discovered_profile_image">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginLeft">11dp</item>
    </style>

    <style name="name_tv">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="item_discovered_tv_over_image" parent="Theme.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignBottom">@+id/cover_image</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>


    </style>
    .

    <style name="search_bar">
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">11dp</item>
        <item name="android:paddingLeft">12dp</item>

    </style>

    <style name="itemn_network_tv1">
        <item name="android:layout_weight">0.5</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">13sp</item>


    </style>

    <style name="itemn_network_tv2">
        <item name="android:layout_weight">0.5</item>
        <item name="android:drawableLeft">@drawable/icon_location</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/grey_text</item>


    </style>

    <style name="itemn_network_tv3">

        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:background">@drawable/connect_button</item>
        <item name="android:layout_marginTop">10dp</item>


    </style>
    <!--item_request-->


    <style name="item_request_card">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>


    </style>


    <style name="item_request_tv1">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">center</item>


    </style>

    <style name="item_request_tv2">
        <item name="android:drawableLeft">@drawable/location_icon_small</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginBottom">7dp</item>

    </style>

    <style name="item_request_tv3">

        <item name="android:background">@drawable/connect_button</item>

        <item name="android:gravity">center</item>
        <item name="android:textSize">11dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="item_request_tv4">
        <item name="android:drawable">@drawable/time_icon_small</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="item_request_tv5">
        <item name="android:drawable">@drawable/reviewa_icon_small</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="accept_view">
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:color">@android:color/white</item>
        <item name="android:layout_marginLeft">81dp</item>
        <item name="android:layout_marginRight">11dp</item>

    </style>

    <style name="reject_view">

        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:color">@android:color/holo_blue_light</item>
        <item name="android:layout_marginLeft">11dp</item>
        <item name="android:layout_marginRight">81dp</item>

    </style>

    <style name="TextView">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_top_small</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <!-- Rounded TextViews--><style name="RoundedTextViewPrimary" parent="@style/TextView">
    <item name="android:background">@drawable/shape_pill_primary</item>
    <item name="android:layout_marginTop">0dp</item>
    <item name="android:padding">@dimen/padding_small</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:gravity">center</item>
</style>

    <style name="RoundedLeftTextView" parent="@style/RoundedTextViewPrimary">
        <item name="android:background">@drawable/shape_pill_left_rounded</item>
    </style>

    <style name="appbar_title">
        >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="navi_item">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">10dp</item>
"

    </style>
</resources>
